@model Capstone.Models.Ordini

@{
    ViewBag.Title = "Edit";
}

<h2>Modifica Ordine</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="panel panel-default">
        <div class="panel-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.OrdiniId)

            <table class="table">
                <tr>
                    <td>@Html.LabelFor(model => model.Indirizzo, htmlAttributes: new { @class = "control-label" })</td>
                    <td>@Html.DisplayFor(model => model.Indirizzo, new { @class = "form-control-static" })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.Stato, "Stato", htmlAttributes: new { @class = "control-label" })</td>
                    <td>
                        @Html.EditorFor(model => model.Stato, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Stato, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.Consegna, "Consegna", htmlAttributes: new { @class = "control-label" })</td>
                    <td>
                        @Html.EditorFor(model => model.Consegna, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                        @Html.ValidationMessageFor(model => model.Consegna, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.Totale, htmlAttributes: new { @class = "control-label" })</td>
                    <td>@Html.DisplayFor(model => model.Totale, new { @class = "form-control-static" })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.PagamentoId, "Tipologia Pagamento", htmlAttributes: new { @class = "control-label" })</td>
                    <td>@Html.DisplayFor(model => model.Pagamenti.TipoPagamento, new { @class = "form-control-static" })</td>
                </tr>
            </table>

            <div class="form-group d-flex">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-primary">Salva</button>
                    <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("Index")'">Torna indietro</button>
                </div>

        
            </div>
</div>
</div>
}

