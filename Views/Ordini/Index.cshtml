@model IEnumerable<Capstone.Models.Ordini>

@{
    ViewBag.Title = "Index";
}

<style>
    @@media (min-width: 768px) and (max-width: 993px) {
        table.table td,
        table.table th {
            font-size: 16px; /* Modifica la dimensione del font per la tabella */
        }
    }
</style>
<h2>Riepilogo Ordini</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="d-none d-md-block">
                <!-- Nascondi la tabella su dispositivi mobili -->
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Nome</th>
                                <th>Cognome</th>
                                <th>Indirizzo</th>
                                <th>Stato</th>
                                <th>Azioni</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Users.Nome)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Users.Cognome)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Indirizzo)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Stato)</td>
                                    <td>
                                        <div class="btn-group" role="group" aria-label="Actions">
                                            @Html.ActionLink("Dettagli", "Details", "OrdVini", new { id = item.OrdiniId }, new { @class = "btn btn-secondary btn-sm" })
                                            @Html.ActionLink("Modifica", "Edit", new { id = item.OrdiniId }, new { @class = "btn btn-info btn-sm" })
                                            @Html.ActionLink(" ", "Delete", new { id = item.OrdiniId }, new { @class = "btn btn-danger btn-sm fas fa-trash-alt", title = "Elimina" })
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="d-xs-none">
                <!-- Visualizza i dati come lista su dispositivi mobili -->
                <ul class="list-group text-sm">
                    <!-- Aggiunta della classe text-sm per la dimensione del testo -->
                    @foreach (var item in Model)
                    {
                        <li class="list-group-item">
                            <div><strong>Nome:</strong> @Html.DisplayFor(modelItem => item.Users.Nome)</div>
                            <div><strong>Cognome:</strong> @Html.DisplayFor(modelItem => item.Users.Cognome)</div>
                            <div><strong>Indirizzo:</strong> @Html.DisplayFor(modelItem => item.Indirizzo)</div>
                            <div><strong>Stato:</strong> @Html.DisplayFor(modelItem => item.Stato)</div>
                            <div class="btn-group mt-2" role="group" aria-label="Actions">
                                @Html.ActionLink("Dettagli", "Details", "OrdVini", new { id = item.OrdiniId }, new { @class = "btn btn-secondary btn-sm" })
                                @Html.ActionLink("Modifica", "Edit", new { id = item.OrdiniId }, new { @class = "btn btn-info btn-sm" })
                                @Html.ActionLink(" ", "Delete", new { id = item.OrdiniId }, new { @class = "btn btn-danger btn-sm fas fa-trash-alt", title = "Elimina" })
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>