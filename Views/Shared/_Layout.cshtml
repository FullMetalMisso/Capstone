
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Applicazione ASP.NET</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="~/Stile/Css/StyleHome.css" />
    <style>
        
        #carrello {
            width: 4rem;
            position: relative; /* Aggiunto */
        }

        #numeroElementiCarrello {
            position: absolute;
            top: +25px; /* Regola la distanza dal bordo superiore */
            right: 20px; /* Regola la distanza dal bordo destro */
            border-radius: 50%;
            color: white;
            background-color: #FFA630 !important;
            padding: 8px; /* Riduce il padding per rendere il cerchio più piccolo */
            font-size: 10px; /* Riduce il font-size */
            line-height: 1;
        }
    
  </style>

</head>
<body>

    <nav class="navbar navbar-expand-lg bg-body navbar-custom">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <div style="width: 125px; height: 125px; border-radius: 50%; overflow: hidden;">
                    <img src="~/Stile/Immagini/_010be895-15a4-429d-a858-7a66e320d81e.png" alt="Logo" class="navbar-logo" style="max-height: 100%; width: auto;">
                </div>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="@Url.Action("Index", "Home")">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="@Url.Action("Noi", "Home")">Su di noi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="@Url.Action("DoveTrovarci", "Home")">Dove Trovarci</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="@Url.Action("Report", "Home")">Per la sostenibilitá</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Profilo
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="@Url.Action("ProfiloUtente", "Profilo")">Il mio profilo</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Details", "Ordini", new { id = User.Identity.Name})">I miei ordini</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Logout", "Auth")">Logout</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link active btntext-start" aria-current="page" href="@Url.Action("Login", "Auth")">Login</a>
                        </li>
                    }
                </ul>
                @if (User.Identity.IsAuthenticated)
                {

                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

                        <li class="nav-item">

                            <a href="@Url.Action("Cart", "OrdVini")" class="nav-link">
                                <img id="carrello" src="~/Stile/Immagini/carrello.png" alt="carrello" />
                                <span id="numeroElementiCarrello" class="badge bg-primary"></span>
                            </a>
                        </li>
                    </ul>
                }
            </div>
        </div>



    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Applicazione ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
   
    <script>
    $(document).ready(function () {
    // Funzione per controllare se la larghezza della finestra è inferiore a 768px (modalità mobile)
    function isMobile() {
        return window.innerWidth < 991;
    }

    // Funzione per mostrare o nascondere l'elemento numeroElementiCarrello
    function updateCartBadgeVisibility() {
        if (isMobile()) {
            $("#numeroElementiCarrello").hide();
        } else {
            $("#numeroElementiCarrello").show();
        }
    }

    // Effettua una richiesta AJAX per ottenere il numero di elementi nel carrello
    $.ajax({
        url: "@Url.Action("GetNumeroElementiCarrello", "OrdVini")",
        type: "GET",
        success: function (data) {
            // Verifica se ci sono elementi nel carrello
            if (data > 0) {
                // Aggiorna il contenuto del badge con il numero di elementi nel carrello
                $("#numeroElementiCarrello").text(data);
                // Mostra il badge solo se non sei in modalità mobile
                updateCartBadgeVisibility();
            } else {
                // Nasconde il badge se non ci sono elementi nel carrello
                $("#numeroElementiCarrello").hide();
            }
        },
        error: function () {
            console.error("Errore durante il recupero del numero di elementi nel carrello.");
        }
    });

    // Controlla se la larghezza della finestra cambia per gestire la visibilità del badge in modalità mobile
    $(window).resize(updateCartBadgeVisibility);

    // Gestisci il click sul tasto ad hamburger
    $(".navbar-toggler").click(function () {
        // Verifica se la navbar è stata aperta
        var navbarExpanded = $(this).attr("aria-expanded") === "true";
        // Se la navbar è stata aperta e siamo in modalità mobile, nascondi l'elemento numeroElementiCarrello
        if (navbarExpanded && isMobile()) {
            $("#numeroElementiCarrello").hide();
        }
    });
});
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
